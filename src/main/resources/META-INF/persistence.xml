            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/paoloweb?useSSL=false" />
            <property name="javax.persistence.jdbc.user" value="paolo" />
            <property name="javax.persistence.jdbc.password" value="123qwe" />
